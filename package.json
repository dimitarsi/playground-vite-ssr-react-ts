{
  "name": "hello-world",
  "version": "0.0.0",
  "scripts": {
    "vite-dev": "vite",
    "dev": "node ./src/server/dev.js",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "build:client": "vite build --config vite-client.config.ts --outDir ./dist/client",
    "build:server": "vite build --outDir ./dist/server --ssr src/server/server-entry.tsx",
    "build:all": "yarn build:client && yarn build:server",
    "start:prod": "node ./src/server/prod.js",
    "run:build": "yarn build:all && yarn start:prod"
  },
  "dependencies": {
    "@loadable/component": "^5.15.0",
    "@loadable/server": "^5.15.1",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/loadable__component": "^5.13.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.3.0",
    "@vitejs/plugin-react": "^1.0.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.2",
    "vite": "^2.5.4",
    "vite-plugin-pwa": "^0.11.3"
  }
}
